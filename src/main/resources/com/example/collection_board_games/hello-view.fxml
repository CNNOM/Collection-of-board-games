<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.collection_board_games.Controller" spacing="10"
      style="-fx-padding: 10;">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Тип:"/>
        <ComboBox fx:id="storageTypeComboBox" onAction="#handleStorageChange" prefWidth="150"/>
        <Label text="Поиск:"/>
        <TextField fx:id="searchField" prefWidth="200"/>
        <Button text="Поиск" onAction="#handleSearch"/>
    </HBox>

    <TableView fx:id="taskTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="titleColumn" text="название" prefWidth="150"/>
            <TableColumn fx:id="descriptionColumn" text="описание" prefWidth="200"/>
            <TableColumn fx:id="categoryColumn" text="категория" prefWidth="100"/>
            <TableColumn fx:id="priorityColumn" text="приоритет" prefWidth="80"/>
            <TableColumn fx:id="statusColumn" text="статус" prefWidth="100"/>
            <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
        </columns>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100" halignment="RIGHT"/>
            <ColumnConstraints prefWidth="300" halignment="LEFT"/>
        </columnConstraints>

        <Label text="название:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="описание:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="категория:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="приоритет:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="priorityComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="статус:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Due Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dueDatePicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Add" onAction="#handleAddTask" prefWidth="80"/>
        <Button text="Update" onAction="#handleUpdateTask" prefWidth="80"/>
        <Button text="Delete" prefWidth="80"/>
    </HBox>
</VBox>